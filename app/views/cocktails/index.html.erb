<h1>My list of cocktails</h1>

<hr>
 <h2> <%= link_to 'New cocktail', new_cocktail_path %> </h2>
<hr>


<% @cocktails.each do |cocktail| %>

  <h2> <%= cocktail.id %> -- <%= cocktail.name %></h2>
  <p> doses: <% cocktail.doses.each do |dose| %>
  <%= dose.description %> |
  <% end  %> </p>
  <p> <%= link_to 'Show', cocktail_path(cocktail) %>  </p>
  <hr>
<% end %>

